<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".PlanillasCoberturas">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp"
            android:orientation="vertical">

        <Space
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:background="#CCCCCC" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/title_form_planillas"
            android:textAlignment="center"
            android:textColor="#000000"
            android:textSize="24sp"
            android:textStyle="bold" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="#CCCCCC" />

            <Button
                android:id="@+id/add_Planillas"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Agregar Nueva Planilla"
                android:layout_marginEnd="50dp"
                android:layout_marginStart="50dp"
                app:icon="@drawable/plus_circle"
                app:iconTint="#38363A" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="#CCCCCC" />


            <LinearLayout
                android:id="@+id/li_Planillas"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

            </LinearLayout>

            <Space
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="#CCCCCC" />

            <Button
                android:id="@+id/btnFormLoad"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Guardar Cambios Localmente"
                android:layout_marginEnd="50dp"
                android:layout_marginStart="50dp"
                app:icon="@android:drawable/ic_menu_save"
                app:iconTint="#000000" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="20dp" />

            <Button
                android:id="@+id/btnFormSync"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Subir Planilla a la Base de Datos"
                android:layout_marginEnd="50dp"
                android:layout_marginStart="50dp"
                app:icon="@android:drawable/ic_menu_upload"
                app:iconTint="#000000" />

        </LinearLayout>

    </ScrollView>

</LinearLayout>